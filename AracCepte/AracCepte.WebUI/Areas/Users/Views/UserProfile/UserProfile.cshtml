        <button class="btn-edit-profile" onclick="~/elif/editProfile()">Profili Düzenle</button>
    </div>

    <!-- Profil Formu -->
    <div class="profile-container">
        <h1>Kullanıcı Bilgileri</h1>
        <div class="tabs">
            <div class="tab active" data-tab="personal">Kişisel Bilgiler</div>
            <div class="tab" data-tab="contact">İletişim Bilgileri</div>
            <div class="tab" data-tab="license">Ehliyet Bilgileri</div>
            <div class="tab" data-tab="registration">Ruhsat Belgeleri</div>
            <div class="tab" data-tab="vehicles">Kayıtlı Araçlarım</div>
            <div class="tab" data-tab="payment">Ödeme Bilgileri</div>
            <div class="tab" data-tab="permissions">İzinlerim</div>
        </div>

         <form>
            <!-- Kişisel Bilgiler -->
              <div id="personal" class="tab-content active">
                <fieldset>
                    <legend>Kişisel Bilgiler</legend>
                    <label>Kullanıcı adı</label>
                    <input type="text" placeholder="Kullanıcı Adı" required>
                    <label>Ad ve Soyad</label>
                    <input type="text" placeholder="Ad Soyad" required>
                    <label>Doğum Tarihi:</label>
                    <input type="date" required>
                    <label>Cinsiyet:</label>
                    <select>
                        <option>Erkek</option>
                        <option>Kadın</option>
                        <option>Diğer</option>
                    </select>
                </fieldset>
            </div>

           <!-- İletişim Bilgileri -->
            <div id="contact" class="tab-content">
                <fieldset>
                    <legend>İletişim Bilgileri</legend>
                    <label>E-posta:</label>
                    <input type="email" placeholder="ornek@domain.com" required>
                    <label>Telefon:</label>
                    <input type="tel" placeholder="+90 555 123 45 67" required>
                </fieldset>
            </div>
            <!-- Ehliyet Bilgileri -->
            <div id="license" class="tab-content">
                <fieldset>
                    <legend>Ehliyet Bilgileri</legend>
                    <label>Ehliyet Sınıfı:</label>
                    <select>
                        <option>B</option>
                        <option>C</option>
                        <option>D</option>
                        <option>E</option>
                    </select>
                    <label>Ehliyet Numarası:</label>
                    <input type="text" placeholder="Ehliyet Numarası" required>
                    <label>Veriliş Tarihi:</label>
                    <input type="date" required>
                </fieldset>
            </div>

            <!-- Ruhsat Belgeleri -->
            <div id="registration" class="tab-content">
                <fieldset>
                    <legend>Ruhsat Belgeleri</legend>
                    <label>Ruhsat Numarası:</label>
                    <input type="text" placeholder="Ruhsat Numarası" required>
                    <label>Belge Sahibi:</label>
                    <input type="text" placeholder="Belge Sahibi">
                    <label>Geçerlilik Tarihi:</label>
                    <input type="date" required>
                </fieldset>
            </div>

            <!-- Kayıtlı Araçlarım -->
            <div id="vehicles" class="tab-content">
                <fieldset>
                    <legend>Kayıtlı Araçlarım</legend>
                    <label>Araç Plakası:</label>
                    <input type="text" placeholder="Araç Plakası">
                    <label>Marka ve Model:</label>
                    <input type="text" placeholder="Marka ve Model">
                </fieldset>
            </div>

            <!-- Ödeme Bilgileri -->
            <div id="payment" class="tab-content">
                <fieldset>
                    <legend>Ödeme Bilgileri</legend>
                    <label>Kredi Kartı Numarası:</label>
                    <input type="text" placeholder="Kart Numarası">
                    <label>Son Kullanma Tarihi:</label>
                    <input type="month" required>
                    <label>CVV:</label>
                    <input type="text" placeholder="Güvenlik Kodu">
                </fieldset>
            </div>

            <!-- İzinlerim -->
            <div id="permissions" class="tab-content">
                <fieldset>
                    <legend>İzinlerim</legend>
                    <label><input type="checkbox"> Bildirimlere izin ver</label>
                    <br>
                    <label><input type="checkbox"> Kampanya mesajlarına izin ver</label>
                    <br>
                    <label><input type="checkbox"> Veri paylaşımına izin ver</label>
                </fieldset>
            </div>
        </form> 
    </div>
