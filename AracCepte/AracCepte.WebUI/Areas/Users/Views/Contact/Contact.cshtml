@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<title>İletişim</title>
<head>
      <style>
         /* Genel Stil */
         body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            background-color: white;
         }
         .centered {
            text-align: center;
            margin: 20px auto;
         }
         .contact-section {
            padding: 60px 0;
         }
         .contact-form {
            background: #008080;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
         }
          .message-button {
              background-color: #008080;
              color: white;
              border: none;
              padding: 10px 20px;
              border-radius: 5px;
              cursor: pointer;
          }
         .message-button:hover {
            background-color: #008080;
         }
         .error {
            color: #008080;
            display: none;
         }
         .map-wrapper {
            height: 400px;
            margin-bottom: 20px;
         }
         .google-map {
            width: 100%;
            height: 100%;
            border: 0;
         }

